  gem "rspec"
  gem "rake"
  gem "guard"
  gem "guard-rspec"
  gem "simplecov"
  gem "metric_abc"
  gem "yard"
  gem "ci_reporter"
  gem "simplecov-rcov"
  gem "rdiscount"
  gem "webmock"
  gem "rspec_multi_matchers"
end



group :linux do
  gem "rb-inotify"
  gem "libnotify"
end

group :windows do
  gem "wdm", "~> 0.0.3"
  gem "win32console"
  gem "rb-notifu"
end

gem "oauth2"
gem "httmultiparty"
